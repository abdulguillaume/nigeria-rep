        @Html.DisplayFor(model => model.lkp_MainUnfulfilledNeed.value)
    </div>

    <div class="display-label">idp are registered? list exist?</div>
    <div class="display-field">
            @if (@Model.idp_registered_list_YesNo == 1)
            {
                @:Ans: Yes
             }
            else if (@Model.idp_registered_list_YesNo == 2)
            {
                @:Ans: No
             }
            else
            { 
                @:Ans: No data
            }
           </div>

    @*added by abdul on july 3, 2017*@
