        @Html.DisplayFor(model => model.estimate_hh)
    </div>

    <div class="display-label">estimate_ind</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.estimate_ind)
    </div>

    <div class="display-label">majority_stateoforigin</div>
