        @Html.DisplayFor(model => model.lkp_State.state_name)
    </div>

    <div class="display-label">majority_lgaoforigin</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.lkp_Lga.lga_name)
    </div>

    <div class="display-label">coord_lon</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.coord_lon)
    </div>

    <div class="display-label">coord_lat</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.coord_lat)
    </div>

    <div class="display-label">created_by</div>
