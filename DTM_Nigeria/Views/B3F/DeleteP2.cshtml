@model DTM_Nigeria.Models.iom_group_assessment_2

@{
    ViewBag.Title = "Delete GA P2/4";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Group Assessment (Page 2/4)</h2>
<h3>@ViewBag.WardInfo</h3>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>DTM - Group Assessment (Page 2/4)</legend>
    <br />
    2. Multi-displacement and intentions
    <table width=100%>
    <tr>
    <th colspan=2>2.1 Have members of the group been displaced more than once since 2014?? (Y/N)</th>
    <td> 
        <div class="display-field">
                @if (Model.member_disp_p1_YesNo == 1)
                {
                    @: Yes
                }
                else
                {
                    @: No
                }
            </div> 
     </td>
    </tr>
    <tr>
    <th colspan=2>2.2 How many times have most families in the group been displaced since Jan 2014? (2,3 or 4+)</th> 
    <td> 
            <div class="display-field">
                @if (Model.how_many_time_disp == 4)
                {
                    @: 4+
                }
                else
                {
                    @Model.how_many_time_disp
                }
                
            </div> 
     </td>
    </tr>
    <tr>
    <th rowspan=2>2.3 If yes where is last place of displacement of the Majority?</th>
    <th>Lga</th><th>Ward</th>
    </tr>
    <tr><td> 
        <div class="display-field">
               @Html.DisplayFor(model => model.lkp_Lga.lkp_State.state_name) /  
                @Html.DisplayFor(model => model.lkp_Lga.lga_name) 
    </td> <td>
        <div class="display-field">
                @Html.DisplayFor(model => model.lkp_Ward.ward_name)
            </div> 
     </td></tr>
    
    <tr>
    <th colspan=2>2.4 What are the intentions of the majority of the group?</th>
    <td> 
        <div class="display-field">
                @Html.DisplayFor(model => model.lkp_Intention.value)
            </div>
     </td>
    </tr>
    </table>
    <br />

      3. Vulnerability
    <table width=100%>
    <tr><td colspan=2>3.1 Which of following vulnerabilities does the group members have?</td></tr>
    <tr><th colspan=2>Vulnerabilities</th></tr>

    <tr><td> 
            3.1. Pregnant women
            <div class="display-field">
                @Html.DisplayFor(model => (model.v_pregnant_women))
            </div> 
             </td>
    <td> 3.7 Unaccompanied children (not with parents and relatives)
            <div class="display-field">
                @Html.DisplayFor(model => (model.v_unaccompanied_children))
            </div>  </td> </tr>

    <tr><td> 
            3.2 Breastfeeding mothers
            <div class="display-field">
                @Html.DisplayFor(model => model.v_breastfeeding_mother)
            </div> 
     </td> <td> 
            3.8 Separated minors
            <div class="display-field">
                @Html.DisplayFor(model => model.v_separated_children)
            </div> 
      </td></tr>

    <tr><td> 
            3.3 Persons with physical disabilities
            <div class="display-field">
                @Html.DisplayFor(model => model.v_physical_disability)
            </div> 
     </td> <td> 
            3.9 Single female head of household
            <div class="display-field">
                @Html.DisplayFor(model => model.v_female_hh)
            </div> 
      </td></tr>


    <tr><td> 
            3.4 Persons with mental disabilities
            <div class="display-field">
                @Html.DisplayFor(model => model.v_mental_disability)
            </div> 
     </td> <td> 
            3.10 Single child head of household
            <div class="display-field">
                @Html.DisplayFor(model => model.v_minor_hh)
            </div> 
      </td></tr>

    <tr><td> 
            3.5 Elderly (not accompanied by relatives)
            <div class="display-field">
                @Html.DisplayFor(model => model.v_older_at_risk)
            </div> 
     </td> <td> 
            3.11 Single male head of household
            <div class="display-field">
                @Html.DisplayFor(model => model.v_male_hh)
            </div> 
      </td></tr>


    <tr><td> 
            3.6 Person with chronic diseases/serious medical conditions 
            <div class="display-field">
                @Html.DisplayFor(model => model.v_serious_med_condition)
            </div> 
     </td> <td> 
            3.12 Others
            <div class="display-field">
                @Html.DisplayFor(model => model.v_other)
                <div class="display-field">
                    @if (string.IsNullOrEmpty(Model.v_specify))
                    {
                        @: No data
                    }
                    else
                    {
                        @Model.v_specify
                    }
                </div> 
            </div> 
      </td></tr>
    </table>

    <br />

    4. Protection
    <table width=100%>
        <tr>
            <th colspan=3>Do people in the group feel safe in their current location</th>
            <td>
                <div class="display-field">
                    @Html.DisplayFor(model => model.lkp_YesNo.value)
                </div> 
            </td>
            <th>No Answer, Why?</th>
            <td>
                <div class="display-field">
                    @Html.DisplayFor(model => model.protect_people_feel_safe_ifNoAns)
                </div>
            </td>
        </tr>

        <tr>
            <th>Most common type of incidents</th>
            <td>
                <div class="display-field">
                    @Html.DisplayFor(model => model.lkp_Incident.incident)
                </div> 
            </td>
            <th>Other, specify</th>
            <td>
                <div class="display-field">
                    @Html.DisplayFor(model => model.protect_common_in_ifOther)
                </div>
            </td>
            <th>No Answer, why?</th>
            <td>
                <div class="display-field">
                    @Html.DisplayFor(model => model.protect_common_in_ifNoAns)
                </div>
            </td>
        </tr>

        <tr>
            <th>Most common type of GBV</th>
            <td>
                <div class="display-field">
                    @Html.DisplayFor(model => model.lkp_GBV.gbv)
                </div> 
            </td>
            <th>Other, specify</th>
            <td>
                <div class="display-field">
                    @Html.DisplayFor(model => model.protect_common_GBV_ifOther)
                </div>
            </td>
            <th>No Answer, why?</th>
            <td>
                <div class="display-field">
                    @Html.DisplayFor(model => model.protect_common_GBV_ifNoAns)
                </div>
            </td>
        </tr>

        <tr>
            <th colspan=2>Most common type of child protection incident</th>
            <td>
                <div class="display-field">
                    @Html.DisplayFor(model => model.lkp_ChildProIncident.incident)
                </div> 
            </td>
            <th>Other, specify</th>
            <td colspan=2>
                <div class="display-field">
                    @Html.DisplayFor(model => model.protect_common_child_p_incident_ifOther)
                </div>
            </td>
        </tr>

        <tr>
            <th>Are travel opportunities being offered within the camp/community</th>
            <td>
                <div class="display-field">
                    @Html.DisplayFor(model => model.lkp_YesNo1.value)
                </div> 
            </td>
            <th>If yes, where to?</th>
            <td>
                <div class="display-field">
                    @Html.DisplayFor(model => model.lkp_TravelLocation.location)
                </div>
            </td>
            <th>If yes, what is promised?</th>
            <td>
                <div class="display-field">
                    @Html.DisplayFor(model => model.lkp_Opportunity.opportunity)
                </div>
            </td>
        </tr>

    </table>

    <br />
   
    5. Needs
    <table width=100%>
        <tr>
            <td colspan=6>5.1 Priority needs: what are the current priority needs of the Group? Choose from the list below, ranking with 1,2,3,4,5 in order of prominence.</td>
        </tr>
        <tr>
            <th>Item</th><th>Ranking</th><th>Item</th><th>Ranking</th><th>Item</th><th>Ranking</th>
        </tr>
        <tr>
            <td>Water</td> <td> <div class="display-field">
                @Html.DisplayFor(model => model.need_water)
            </div> </td> <td> Sanitation/Hygiene</td> <td> <div class="display-field">
                @Html.DisplayFor(model => model.need_sanitation)
            </div> </td> <td> Access to income </td> <td> <div class="display-field">
                @Html.DisplayFor(model => model.need_access_icome)
            </div> </td>
        </tr>
        <tr>
            <td>Food</td> <td> <div class="display-field">
                @Html.DisplayFor(model => model.need_food)
            </div> </td> <td>Shelter</td> <td> <div class="display-field">
                @Html.DisplayFor(model => model.need_shelter)
            </div> </td> <td> Legal help</td> <td> <div class="display-field">
                @Html.DisplayFor(model => model.need_lhelp)
            </div> </td>
        </tr>

        <tr>
            <td>Health</td><td> <div class="display-field">
                @Html.DisplayFor(model => model.need_health)
            </div> </td> <td> Education </td> <td> <div class="display-field">
                @Html.DisplayFor(model => model.need_education)
            </div> </td> <td> NFI </td> <td> <div class="display-field">
                @Html.DisplayFor(model => model.need_nfi)
            </div> </td>
        </tr>

        <tr>
            <td>Other</td> <td> Specify:</td> <td> <div class="display-field">
            @if (string.IsNullOrEmpty(Model.need_specify))
            {
                @: No data
            }
            else
            {
                @Model.need_specify
            }
            </div> </td> <td> <div class="display-field">
                @Html.DisplayFor(model => model.need_other)
            </div> </td> <td colspan=2></td>
        </tr>
    </table>
    <br />

    6. Shelter
    <table width=100%>
    <tr>
      <th rowspan=2>Number of people in:</th> <th>1)host community</th><th>2)rented house</th>
      <th>3)makeshift shelter</th><th>4)emergency shelter</th>
    </tr>

    <tr>
        <td>
            <div class="display-field">
                @Html.DisplayFor(model => model.shelter_num_hc)
            </div>
        </td>
        <td>
            <div class="display-field">
                @Html.DisplayFor(model => model.shelter_num_rh)
            </div>
        </td>
        <td>
            <div class="display-field">
                @Html.DisplayFor(model => model.shelter_num_ms)
            </div>
        </td>
        <td>
            <div class="display-field">
                @Html.DisplayFor(model => model.shelter_num_es)
            </div>
        </td>
    </tr>

    <tr>
        <th colspan=2>Most needed NFI</th>
        <td>
            <div class="display-field">
                    @Html.DisplayFor(model => model.lkp_NeededNFI.nfi)
                </div>
        </td>
        <th>
            If other, specify
        </th>
        <td>
            <div class="display-field">
                @Html.DisplayFor(model => model.shelter_mn_other)
            </div>
        </td>
    </tr>

    </table>

    <br />
    <table width=100%>
            <tr>
            <th>created_by</th>
            <th>create_time</th>
            <th>updated_by</th>
            <th>update_time</th>
            </tr>
            <tr>
                <td>
                <div class="display-field">
                    @Html.DisplayFor(model => model.created_by)
                </div>
                </td><td>
                <div class="display-field">
                    @Html.DisplayFor(model => model.create_time)
                </div>
                </td><td>
                <div class="display-field">
                    @Html.DisplayFor(model => model.updated_by)
                </div>
                </td><td>
                <div class="display-field">
                    @Html.DisplayFor(model => model.update_time)
                </div>
                </td>

            </tr>
        </table>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Cancel", "Index")
    </p>
}
