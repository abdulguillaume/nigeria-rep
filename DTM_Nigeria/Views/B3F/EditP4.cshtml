@model DTM_Nigeria.Models.Age_sample

@{
    ViewBag.Title = "Edit GA 4/4";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Group Assessment</h2>
<h3>@ViewBag.WardInfo</h3>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>DTM - Group Assessment (Page 4/4)</legend>

        <table>
            <tr>
                <th></th><th colspan=5>Male</th><th colspan=5>Female</th></tr><tr>
                <th>HHs</th><th>-1</th><th>1-5</th><th>6-17</th><th>18-59</th><th>60+</th><th>-1</th><th>1-5</th><th>6-17</th><th>18-59</th><th>60+</th>
            </tr>

        @for (int i = 0; i < Model.hh_ages.Count();i++ )
        {
            int j = i + 1;
            <tr>
                <td>@j
                </td>
                <td>
                    <div class="bd_editor editor-field">
                        @Html.EditorFor(model => model.hh_ages[i].m_lt1)
                        @Html.ValidationMessageFor(model => model.hh_ages[i].m_lt1)
                    </div>
                </td>
                <td>
                    <div class="bd_editor editor-field">
                        @Html.EditorFor(model => model.hh_ages[i].m_1_5)
                        @Html.ValidationMessageFor(model => model.hh_ages[i].m_1_5)
                    </div>
                </td>
                <td>
                    <div class="bd_editor editor-field">
                        @Html.EditorFor(model => model.hh_ages[i].m_6_17)
                        @Html.ValidationMessageFor(model => model.hh_ages[i].m_6_17)
                    </div>
                </td>
                <td>
                    <div class="bd_editor editor-field">
                        @Html.EditorFor(model => model.hh_ages[i].m_18_59)
                        @Html.ValidationMessageFor(model => model.hh_ages[i].m_18_59)
                    </div>
                </td>
                <td>
                    <div class="bd_editor editor-field">
                        @Html.EditorFor(model => model.hh_ages[i].m_60p)
                        @Html.ValidationMessageFor(model => model.hh_ages[i].m_60p)
                    </div>
                </td>
                <td>
                    <div class="bd_editor editor-field">
                        @Html.EditorFor(model => model.hh_ages[i].f_lt1)
                        @Html.ValidationMessageFor(model => model.hh_ages[i].f_lt1)
                    </div>
                </td>
                <td>
                    <div class="bd_editor editor-field">
                        @Html.EditorFor(model => model.hh_ages[i].f_1_5)
                        @Html.ValidationMessageFor(model => model.hh_ages[i].f_1_5)
                    </div>
                </td>
                <td>
                    <div class="bd_editor editor-field">
                        @Html.EditorFor(model => model.hh_ages[i].f_6_17)
                        @Html.ValidationMessageFor(model => model.hh_ages[i].f_6_17)
                    </div>
                </td>
                <td>
                    <div class="bd_editor editor-field">
                        @Html.EditorFor(model => model.hh_ages[i].f_18_59)
                        @Html.ValidationMessageFor(model => model.hh_ages[i].f_18_59)
                    </div>
                </td>
                <td>
                    <div class="bd_editor editor-field">
                        @Html.EditorFor(model => model.hh_ages[i].f_60p)
                        @Html.ValidationMessageFor(model => model.hh_ages[i].f_60p)
                    </div>
                </td>
            </tr>
    
        }

        </table>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
